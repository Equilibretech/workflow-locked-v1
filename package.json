{
  "name": "workflow-locked-v1",
  "version": "1.0.0",
  "description": "DevFoundation Workflow Locked V1 - Framework professionnel pour développement solo avec workflow verrouillé en 7 étapes",
  "main": "index.js",
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "scripts": {
    "prepare": "husky install",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:check": "npm run lint -- --max-warnings=0",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:wizard": "cd docs/wizard && npm run test",
    "docs:dev": "cd docs && npm run dev",
    "docs:build": "cd docs && npm run build",
    "docs:preview": "cd docs && npm run preview",
    "wizard:dev": "cd docs/wizard && npm run dev",
    "wizard:build": "cd docs/wizard && npm run build",
    "wizard:test": "cd docs/wizard && npm run test"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.29.0",
    "husky": "^9.1.7",
    "prettier": "^3.6.0",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vitest": "^3.2.4"
  },
  "type": "module"
}
